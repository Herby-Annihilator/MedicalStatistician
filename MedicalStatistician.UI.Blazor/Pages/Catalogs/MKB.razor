}




@code
{
    private IList<MKB10> _MKB;
    private MKB10 _ObjectToCreate = new();
    private MKB10 _ObjectToUpdate;

    protected override async Task OnInitializedAsync()
    {
        _MKB = (await MKBEntity.GetAllAsync()).ToList();
    }

    private void Remove(MKB10 item)
    {
        if (_MKB != null)
        {
            _MKB.Remove(item);
            MKBEntity.DeleteAsync(item);
        }

    }

    private async Task Create()
    {
        Modal.Title = "Добавление данных";
        Modal.SaveButtonName = "Добавить";
        Modal.Open();
    }

    private async Task Update(MKB10 item)
    {
        Modal.Title = "Изменение данных";
        Modal.SaveButtonName = "Изменить";
        _ObjectToUpdate = item;
        Modal.Open();
    }

    private async Task OnCreate()
    {
        _ObjectToCreate.Actual = Modal.Actual;
        _ObjectToCreate.Date = Modal.Date;
        _ObjectToCreate.MkbCode = Modal.Code;
        _ObjectToCreate.MkbName = Modal.Name;
        _ObjectToCreate.Parent.MkbName = Modal.Parent;
        await MKBEntity.CreateAsync(_ObjectToCreate);
        _ObjectToCreate = new();
    }

    private async Task OnUpdate()
    {
        _ObjectToUpdate.Actual = Modal.Actual;
        _ObjectToUpdate.Date = Modal.Date;
        _ObjectToUpdate.MkbCode = Modal.Code;
        _ObjectToUpdate.MkbName = Modal.Name;
        _ObjectToUpdate.Parent.MkbName = Modal.Parent;
        await MKBEntity.UpdateAsync(_ObjectToUpdate);
    }

    //
    // Работа с модальным окном
    //
    MedicalStatistician.UI.Blazor.Modal.ModalMKB Modal;

    private async Task OnSave()
    {
        if (Modal.Name != "")         
            if (Modal.SaveButtonName == "Добавить")
                await OnCreate();
            else
                await OnUpdate();
        Modal.Close();
    }

